---
import Button from '../components/Button.astro';
---
<section class="pb-28 w-96 mx-auto pt-48">
    <img class=" mx-auto" src="/pixel_ikoner/flag.png" alt="pixel flag">
    <h2 class="text-2xl md:text-3xl text-center font-bold py-16 font-['Trebuchet_MS']">Registrer dit digitale skrald</h2>
    <form class="grid grid-cols-1 gap-2 font-sm font-sans bg-neutral-800 px-4">
    
        <div class="grid grid-rows-2">
            <label for="fnavn" class=""></label>
            <div class=" flex flex-row justify-between items-center  bg-zinc-500 hover:bg-zinc-400 focus:bg-white focus:ring-0  rounded focus:rounded"> 
                <input type="text" id="fnavn" name="Fornavn" placeholder="Fornavn" class=" bg-transparent focus:bg-zinc-500 focus:ring-0 border-0 basis-11/12 rounded ">
               <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 pr-2 ">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
                </svg> 
            </div>
        </div>

        <div class="grid grid-rows-2">
            <label for="fnavn" class=""></label>
            <div class=" flex flex-row justify-between items-center  bg-zinc-500 hover:bg-zinc-400 focus:border-black focus:bg-white focus:ring-0 rounded"> 
                <input type="text" id="fnavn" name="Fornavn" placeholder="Efternavn" class=" bg-transparent focus:bg-zinc-500 focus:ring-0 border-0 basis-11/12 rounded ">
               <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 pr-2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
                </svg> 
            </div>
        </div>

        <div class="grid grid-rows-2">
            <label for="fnavn" class=""></label>
            <div class=" flex flex-row justify-between items-center  bg-zinc-500 hover:bg-zinc-400 focus:border-black focus:bg-white focus:ring-0 rounded"> 
                <input type="text" id="fnavn" name="Fornavn" placeholder="Email adresse" class=" bg-transparent focus:bg-zinc-500 focus:ring-0 border-0 basis-11/12 rounded  ">
               <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 pr-2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
                </svg> 
            </div>
        </div>
 

        <div class="grid grid-rows-2">
            <label for="adresse" class=" "></label>
            <input type="text" id="adresse" name="Adresse" placeholder="Land" class="bg-zinc-500  hover:bg-zinc-400 focus:border-black focus:bg-zinc-500 focus:ring-0 rounded border-0">
        </div>

        <div class="grid grid-rows-2">
            <label for="adresse" class=" "></label>
            <input type="text" id="adresse" name="Adresse" placeholder="Organisationsnavn (valgfrit)" class="bg-zinc-500  hover:bg-zinc-400 focus:border-black focus:bg-zinc-500 focus:ring-0 border-0 rounded ">
        </div>

        <div class="grid grid-rows-2">
            <label for="adresse" class=" pt-6">Deltagere</label>
            <input type="text" id="adresse" name="Adresse" placeholder="1" class="bg-zinc-500  hover:bg-zinc-400 focus:border-black focus:bg-zinc-500 focus:ring-0 rounded border-0">
        </div>

       

        <div class="grid grid-rows-2 gap-0">
            <label for="fnavn" class="pt-6">Mængde Slettet In GB</label>
            <div class=" flex flex-row justify-between items-center  bg-zinc-500 hover:bg-zinc-400 focus:border-black focus:bg-zinc-500 focus:ring-0 rounded"> 
                <input type="text" id="fnavn" name="Fornavn" placeholder="0" class=" bg-transparent focus:ring-0 focus:bg-zinc-500 border-0 basis-11/12 rounded ">
                <p class="pr-2">GB</p>
            </div>
        </div>

        <p class="py-8 text-center">Total deleted 8511463 Gigabytes and saved 2127865 kg/year CO₂.</p>

        <div class="pb-6">
            <input type="checkbox" id="nyhedsbrev" name="Nyhedsbrev" class="rounded  bg-transparent  hover:bg-zinc-400  underline focus:bg-zinc-500 text-pink-600 focus:ring-0 focus:ring-offset-2 border-1 border-neutral-100">
            <label class="pl-4" for="nyhedsbrev">I agree with Lets do it,<br><span class="pl-10"> World Terms and Conditions</span></label>
        </div>

        <div class="">
            <input type="checkbox" id="nyhedsbrev" name="Nyhedsbrev" class="rounded  bg-transparent  hover:bg-zinc-400  focus:bg-zinc-500 text-pink-600 focus:ring-0 focus:ring-offset-2 border-1 border-neutral-100">
            <label class="pl-4" for="nyhedsbrev">I want to sign up for news from <br><span class="pl-10">World Cleanup Day</span></label>
        </div>
    
    </form>
    <div>	
       <Button variant="primary" size="large" >Registrer</Button>
    </div>
</section>

<style>

input::placeholder{
  color: whitesmoke;
}
</style>