---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import '../styles/tailwind.css';
import 'animate.css';
const { title } = Astro.props;
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{Astro.props.title}</title>
	</head>
	<body class="text-neutral-100 bg-neutral-800">

		<header class="mx-auto pb-6">
			<Header></Header>
			<img class=" -z-50 imgh absolute top-32 md:top-4 md:-r-1 md:ml-96" src="/background.svg" alt="">
		</header>
		
		<main class="pt-8 mt-24 z-50">
			<slot />
		</main>

		<footer class=" mx-auto pt-8">
			<img class="scale-x-[-1] scale-y-[-1] -z-50 imgf" src="/background.svg" alt="">
			<Footer></Footer>
		</footer>
			
	</body>
</html>

<style>

.imgh{
		margin-top: -5px;
		max-width: 1000px;
		scale: 2;

	}
	.imgf{
		margin-bottom: -5px;
		max-width: 700px;
		scale: 2;
	
	}
</style>